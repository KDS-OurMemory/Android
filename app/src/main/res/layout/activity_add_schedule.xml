<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_activity_add_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/iv_activity_add_schedule_enroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity=""
                android:src="@drawable/ic_baseline_check_30"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <EditText
            android:id="@+id/et_activity_add_schedule_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="일정 제목"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:textSize="20dp"
            tools:ignore="HardcodedText,RtlSymmetry,SpUsage,TextFields" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_schedule_top_down_edge"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:src="@drawable/ic_baseline_access_time_24"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:hint="날짜"
                android:paddingStart="5dp"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity_add_schedule_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_activity_add_schedule_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity_add_schedule_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_activity_add_schedule_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:src="@drawable/ic_baseline_description_24"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <EditText
                android:id="@+id/et_activity_add_schedule_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="내용"
                android:paddingStart="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:src="@drawable/ic_baseline_location_on_24"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <EditText
                android:id="@+id/et_activity_add_schedule_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="장소"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity_add_schedule_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:src="@drawable/ic_baseline_access_alarm_24"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <EditText
                android:id="@+id/et_activity_add_schedule_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:hint="알람"
                android:textColor="@color/black"
                android:paddingStart="5dp"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity_add_schedule_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:src="@drawable/ic_baseline_color_lens_24"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <EditText
                android:id="@+id/et_activity_add_schedule_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:enabled="false"
                android:hint="색상"
                android:paddingStart="5dp"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity_add_schedule_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:src="@drawable/ic_baseline_share_24"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <EditText
                android:id="@+id/et_activity_add_schedule_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@null"
                android:enabled="false"
                android:hint="공유"
                android:textColor="@color/black"
                android:paddingStart="5dp"
                tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>