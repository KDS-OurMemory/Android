<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_fragment_share_separate_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="@color/light_grey2"
        android:hint="이름(초성), 전화번호 검색"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="12dp"
        tools:ignore="Autofill,HardcodedText,RtlSymmetry,SpUsage,TextFields" />

    <TextView
        android:id="@+id/tv_fragment_share_separate_no_friend_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="친구 목록이 없습니다."
        android:textColor="@color/black"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <include layout="@layout/fragment_share_recyclerview" />

</LinearLayout>